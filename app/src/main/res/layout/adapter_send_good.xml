<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="@dimen/viewHeight"
    android:layout_marginRight="5dp"
    android:background="#F7F7F7"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAdapterOrderSendGoodsPic"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_margin="@dimen/margin6"
        android:layout_weight="1.7"
        android:background="@mipmap/image_loading"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="@dimen/padding6">

        <!-- 价格 -->
        <TextView
            android:id="@+id/tvAdapterOrderSendGoodsPrice"
            style="@style/textCommentTransParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="￥00.00" />

        <TextView
            android:id="@+id/tvAdapterOrderSendGoodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tvAdapterOrderSendGoodsPrice"
            android:text="asdfasdfasdfas"
            android:textColor="#FF3D3D3D"
            android:textSize="@dimen/titleTextSize" />

        <TextView
            android:id="@+id/ivAdapterOrderSendGoodsNumber"
            style="@style/textCommentTransParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAdapterOrderSendGoodsName"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|bottom"
            android:text="X0" />

        <TextView
            android:id="@+id/ivAdapterSendOrderSendGoodsState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAdapterOrderSendGoodsNumber"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="right|bottom"
            android:text="当前欠：12"
            android:textColor="@color/backgroundRed"
            android:textSize="@dimen/titleTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAdapterOrderSendGoodsNumber"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin6"
            android:layout_toLeftOf="@id/ivAdapterSendOrderSendGoodsState"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAdapterSendOrderSendNum"
                style="@style/textCommentParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n次发货 X " />

            <TextView
                android:id="@+id/tvAdapterSendOrderSendNumber"
                style="@style/textCommentParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gray_frame"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/DP25"
                android:paddingTop="@dimen/padding3"
                android:paddingRight="@dimen/DP25"
                android:paddingBottom="@dimen/padding3" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>