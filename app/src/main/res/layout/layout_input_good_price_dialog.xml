<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_circle_corner_dialog"
    android:orientation="vertical">

    <TextView
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:padding="@dimen/padding12"
        android:text="修改价格" />

    <EditText
        android:id="@+id/etGoodsPriceDialog"
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding12"
        android:layout_marginLeft="@dimen/padding12"
        android:layout_marginRight="@dimen/padding12"
        android:background="@drawable/shape_ect_gray"
        android:includeFontPadding="false"
        android:inputType="number|numberDecimal"
        android:padding="@dimen/padding6"
        android:textCursorDrawable="@drawable/shape_cursor" />

    <TextView
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:padding="@dimen/padding12"
        android:text="修改价格备注" />

    <EditText
        android:id="@+id/etGoodsPriceRemarkDialog"
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding12"
        android:layout_marginLeft="@dimen/padding12"
        android:layout_marginRight="@dimen/padding12"
        android:background="@drawable/shape_ect_gray"
        android:gravity="start"
        android:hint="必填"
        android:includeFontPadding="false"
        android:lineSpacingExtra="1.5dp"
        android:minHeight="90dp"
        android:padding="@dimen/padding6"
        android:textCursorDrawable="@drawable/shape_cursor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGoodsPriceCancel"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="@dimen/padding12"
            android:text="取消" />

        <TextView
            android:id="@+id/tvGoodsPriceConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/backgroundRed"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="@dimen/padding12"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>
</LinearLayout>