<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/viewHeight"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAdapterAddressPhone"
        style="@style/textCommentParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/padding12"
        android:text="123456789" />

    <TextView
        android:id="@+id/tvAdapterAddressName"
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tvAdapterAddressPhone"
        android:padding="@dimen/padding12"
        android:text="小孩子" />

    <TextView
        android:id="@+id/tvAdapterAddressDetail"
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAdapterAddressName"
        android:lineSpacingExtra="1.5dp"
        android:padding="@dimen/padding12"
        android:text="小孩子小孩子小孩子小孩子小孩子小孩子小孩子小孩子小孩子小孩子小孩子小孩子小孩子" />

    <View
        android:id="@+id/viewAdapterAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewHeight"
        android:layout_below="@id/tvAdapterAddressDetail"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewAdapterAddress"
        android:orientation="horizontal">

        <com.example.administrator.chadaodiancompany.view.ImageCenterRadioButton
            android:id="@+id/cbAdapterAddressDefault"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="false"
            android:drawableLeft="@drawable/check_select"
            android:drawablePadding="@dimen/padding6"
            android:focusable="false"
            android:gravity="center"
            android:padding="@dimen/padding12"
            android:text="默认" />

        <com.example.administrator.chadaodiancompany.view.ImageCenterTextView
            android:id="@+id/cbAdapterAddressEdit"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_edit"
            android:drawablePadding="@dimen/padding6"
            android:gravity="center"
            android:padding="@dimen/padding12"
            android:text="编辑" />

        <com.example.administrator.chadaodiancompany.view.ImageCenterTextView
            android:id="@+id/cbAdapterAddressDelete"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/common_del_pic"
            android:drawablePadding="@dimen/padding6"
            android:gravity="center"
            android:padding="@dimen/padding12"
            android:text="删除" />
    </LinearLayout>
</RelativeLayout>