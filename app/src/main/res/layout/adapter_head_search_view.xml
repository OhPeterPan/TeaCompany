<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right">

        <TextView
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/padding12"
            android:paddingBottom="@dimen/padding12"
            android:text="商品" />

        <com.example.administrator.chadaodiancompany.view.ImageCenterTextView
            android:id="@+id/tvGoodSearchVolume"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/select_statistic_sell"
            android:drawablePadding="@dimen/padding3"
            android:gravity="center"
            android:paddingTop="@dimen/padding12"
            android:paddingBottom="@dimen/padding12"
            android:text="销售量" />

        <com.example.administrator.chadaodiancompany.view.ImageCenterTextView
            android:id="@+id/tvGoodSearchMoney"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/select_statistic_sell"
            android:drawablePadding="@dimen/padding3"
            android:gravity="center"
            android:paddingTop="@dimen/padding12"
            android:paddingBottom="@dimen/padding12"
            android:text="销售额" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGoodSearchTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e4e4e4"
            android:gravity="center"
            android:paddingTop="@dimen/padding12"
            android:paddingBottom="@dimen/padding12"
            android:textColor="@color/backgroundDarkYellow"
            android:textSize="@dimen/titleTextSize"
            tools:text="商品" />

        <TextView
            android:id="@+id/tvGoodSearchNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e4e4e4"
            android:gravity="center"
            android:paddingTop="@dimen/padding12"
            android:paddingBottom="@dimen/padding12"
            android:textColor="@color/backgroundDarkYellow"
            android:textSize="@dimen/titleTextSize"
            tools:text="0" />

        <TextView
            android:id="@+id/tvGoodSearchVolumeMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e4e4e4"
            android:gravity="center"
            android:paddingTop="@dimen/padding12"
            android:paddingBottom="@dimen/padding12"
            android:textColor="@color/backgroundDarkYellow"
            android:textSize="@dimen/titleTextSize"
            tools:text="0" />
    </LinearLayout>
</LinearLayout>