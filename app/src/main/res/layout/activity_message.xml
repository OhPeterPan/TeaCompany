<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMessageSystem"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_message_system"
            android:drawablePadding="@dimen/padding6"
            android:gravity="center"
            android:padding="12dp"
            android:text="系统消息" />

        <TextView
            android:id="@+id/tvMessageInteract"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_message_interact"
            android:drawablePadding="@dimen/padding6"
            android:gravity="center"
            android:padding="12dp"
            android:text="互动消息" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>