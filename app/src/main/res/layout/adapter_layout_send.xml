<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding6">

    <TextView
        android:id="@+id/tvAdapterSendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_gray_corner"
        android:paddingLeft="@dimen/padding12"
        android:paddingTop="@dimen/padding3"
        android:paddingRight="@dimen/padding12"
        android:paddingBottom="@dimen/padding3"
        android:text="2019-09-08" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAdapterSendTime"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdapterSendContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/margin6"
            android:background="@drawable/shape_light_gray_ground"
            android:gravity="center"
            android:paddingLeft="@dimen/padding12"
            android:paddingTop="@dimen/padding6"
            android:paddingRight="@dimen/padding12"
            android:paddingBottom="@dimen/padding6"
            android:text="试试吧"
            android:textColor="@color/textDarkColor"
            android:textSize="@dimen/titleTextSize" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAdapterSendPic"
            style="@style/civ_pic_style"
            android:scaleType="centerCrop" />
    </LinearLayout>


</RelativeLayout>