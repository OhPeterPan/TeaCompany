<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            style="@style/textCommentParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding12"
            android:text="检测新版本" />

        <TextView
            android:id="@+id/tvSettingName"
            style="@style/textCommentParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/yellow_arrows"
            android:drawablePadding="@dimen/padding6"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/padding12"
            tools:text="v1.0" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvExitApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_system_dialog_ground"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/padding12"
        android:text="退出账号"
        android:textColor="@android:color/white"
        android:textSize="@dimen/titleTextSize" />
</LinearLayout>
