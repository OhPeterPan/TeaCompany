<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_statistic_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding12"
            android:text="统计"
            android:textColor="@color/white"
            android:textSize="@dimen/titleTextSize_14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbStatisticsWeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="@dimen/padding12"
                android:text="6天"
                android:textColor="@color/white"
                android:textSize="@dimen/titleTextSize" />

            <RadioButton
                android:id="@+id/rbStatisticsMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/padding12"
                android:text="30天"
                android:textColor="@color/white"
                android:textSize="@dimen/titleTextSize" />

            <RadioButton
                android:id="@+id/rbStatisticsQuarter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/padding12"
                android:text="90天"
                android:textColor="@color/white"
                android:textSize="@dimen/titleTextSize" />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/flStatistic"
            android:layout_width="match_parent"
            android:layout_height="260dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWeekRevenue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="12dp"
                android:textColor="@color/white"
                android:textSize="@dimen/homeBottomTextSize"
                tools:text="7天营收" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tvDayBig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="12dp"
                android:textColor="@color/white"
                android:textSize="@dimen/homeBottomTextSize"
                tools:text="单日最高" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin12"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tvDayAvg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="12dp"
                android:textColor="@color/white"
                android:textSize="@dimen/homeBottomTextSize"
                tools:text="日均" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStatisticSell"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_statistics_sell"
            android:drawablePadding="@dimen/padding6"
            android:gravity="center"
            android:padding="@dimen/padding12"
            android:text="销售统计" />

        <TextView
            android:id="@+id/tvStatisticGood"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_statistics_good"
            android:drawablePadding="@dimen/padding6"
            android:gravity="center"
            android:padding="@dimen/padding12"
            android:text="商品分析" />
    </LinearLayout>
</LinearLayout>