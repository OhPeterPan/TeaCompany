<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.chadaodiancompany.view.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/layout_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tvSwipeEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/backgroundDarkYellow"
            android:drawableTop="@drawable/ic_edit_pic"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingLeft="@dimen/padding12"
            android:paddingTop="@dimen/padding10"
            android:paddingRight="@dimen/padding12"
            android:paddingBottom="@dimen/padding10"
            android:text="编辑"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@id/tvSwipeDel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/backgroundRed"
            android:drawableTop="@drawable/ic_delete_pic"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingLeft="@dimen/padding12"
            android:paddingTop="@dimen/padding10"
            android:paddingRight="@dimen/padding12"
            android:paddingBottom="@dimen/padding10"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/layout_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdapterMemberNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvAdapterMemberGradeName"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="等级名称" />

        <TextView
            android:id="@+id/tvAdapterMemberGradePrice"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="对应金额" />
    </LinearLayout>
</com.example.administrator.chadaodiancompany.view.SwipeLayout>