<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etSendGoodRemark"
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin12"
        android:background="@drawable/shape_gray_ground"
        android:gravity="start"
        android:hint="发货备忘"
        android:includeFontPadding="false"
        android:lineSpacingExtra="1.5dp"
        android:padding="@dimen/padding6"
        android:textCursorDrawable="@drawable/shape_cursor"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewHeight"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSendGoodIndexSheep"
            style="@style/textCommentParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="@dimen/padding12"
            android:text="运费：0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etSendGoodRemark" />

        <TextView
            android:id="@+id/tvSendGoodIndexAmount"
            style="@style/textCommentParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:includeFontPadding="false"
            android:padding="@dimen/padding12"
            android:text="总金额：0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewHeight"
        android:background="@color/colorBackground" />

    <TextView
        android:id="@+id/tvSendGoodBuyerDetail"
        style="@style/textCommentParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin1"
        android:lineSpacingExtra="1.5dp"
        android:padding="@dimen/padding12"
        android:text="买家： 13937291366收货人：李新 13937291366河南 安阳市 滑县 滑县" />
</LinearLayout>