<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llAdapterChooseGood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbAdapterChooseGood"
            style="@style/textCommentParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="false"

            android:drawableLeft="@drawable/check_select"
            android:focusable="false"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/padding12"
            android:paddingLeft="@dimen/padding12"
            android:paddingRight="@dimen/padding6"
            android:paddingTop="@dimen/padding12" />

        <TextView
            android:id="@+id/cbAdapterGoodARTNO"
            style="@style/textCommentParent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingRight="@dimen/padding12"
            android:text="平台货号" />

        <TextView
            android:id="@+id/tvAdapterGoodTime"
            style="@style/textCommentParent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/padding12"
            android:paddingRight="@dimen/padding12"
            android:text="2018-01-01" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding12">

        <ImageView
            android:id="@+id/ivAdapterGoodsPic"
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_loading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding6">

            <TextView
                android:id="@+id/tvAdapterGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="八马茶叶八马茶叶八马茶叶八马茶叶八马茶叶"
                android:textColor="@color/textDarkColor"
                android:textSize="@dimen/titleTextSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAdapterGoodsARTNO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="商品货号：00"
                    android:textColor="@color/textLightColor"
                    android:textSize="@dimen/smallTextSize" />

                <TextView
                    android:id="@+id/tvAdapterGoodOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_undercarriage"
                    android:drawablePadding="@dimen/padding6"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:padding="@dimen/padding6"
                    android:text="下架"
                    android:textColor="@color/textDarkColor"
                    android:textSize="@dimen/titleTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="库存 : "
                    android:textColor="@color/textDarkColor"
                    android:textSize="@dimen/titleTextSize" />

                <ImageView
                    android:id="@+id/ivAdapterGoodDes"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_product_num_des_normal" />

                <TextView
                    android:id="@+id/tvAdapterGoodNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_good_stock"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:minWidth="100dp"
                    android:padding="2dp"
                    android:text="0"
                    android:textColor="@color/textDarkColor"
                    android:textSize="@dimen/titleTextSize" />

                <ImageView
                    android:id="@+id/ivAdapterGoodAdd"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_product_num_add_normal" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>