<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAdapterWaitPay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="@dimen/padding6"
    android:visibility="gone">

    <TextView
        android:id="@+id/tvAdapterCancelOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_gray_frame"
        android:paddingLeft="@dimen/padding9"
        android:paddingTop="@dimen/padding6"
        android:paddingRight="@dimen/padding9"
        android:paddingBottom="@dimen/padding6"
        android:text="取消订单"
        android:textColor="#292929"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        android:id="@+id/tvAdapterChangeOrderExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_gray_frame"
        android:paddingLeft="@dimen/padding9"
        android:paddingTop="@dimen/padding6"
        android:paddingRight="@dimen/padding9"
        android:paddingBottom="@dimen/padding6"
        android:text="修改运费"
        android:textColor="#569f5d"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        android:id="@+id/tvAdapterChangeOrderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_gray_frame"
        android:paddingLeft="@dimen/padding9"
        android:paddingTop="@dimen/padding6"
        android:paddingRight="@dimen/padding9"
        android:paddingBottom="@dimen/padding6"
        android:text="修改价格"
        android:textColor="#dc851b"
        android:textSize="@dimen/smallTextSize" />

    <TextView
        android:id="@+id/tvAdapterConfirmMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_gray_frame"
        android:paddingLeft="@dimen/padding9"
        android:paddingTop="@dimen/padding6"
        android:paddingRight="@dimen/padding9"
        android:paddingBottom="@dimen/padding6"
        android:text="确认收款"
        android:textColor="#d13030"
        android:textSize="@dimen/smallTextSize" />

</LinearLayout>