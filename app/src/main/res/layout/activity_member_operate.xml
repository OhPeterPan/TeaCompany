<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="新增公司名称："
            android:textColor="@color/textLightColor"
            android:textSize="@dimen/titleTextSize" />

        <EditText
            android:id="@+id/etMemberCompanyName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingRight="@dimen/padding12"
            android:textColor="@color/edit_enable_state"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/titleTextSize"
            tools:text="开封市的名字" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="给予公司等级："
            android:textColor="@color/textLightColor"
            android:textSize="@dimen/titleTextSize" />

        <TextView
            android:id="@+id/tvMemberCompanyGrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_right_allow"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/padding12"
            android:textColor="@color/edit_enable_state"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/titleTextSize"
            tools:text="三级经销商" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMemberSaveInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_system_dialog_ground"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/padding12"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="@dimen/titleTextSize" />
</LinearLayout>